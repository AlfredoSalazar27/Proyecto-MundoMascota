<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FA">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perros"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Fila 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- Perro 1: Firulais -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/firulais"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                app:cornerRadius="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firulais"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- PRECIO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₡ 85,000"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComprarFirulais"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Perro 2: Oscar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="89dp"
                android:src="@drawable/oscar"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                app:cornerRadius="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oscar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- PRECIO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₡ 72,500"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComprarOscar"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Fila 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- Perro 3: Draco -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/draco"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                app:cornerRadius="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draco"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- PRECIO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₡ 95,000"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComprarDraco"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Perro 4: Colochini -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/colochini"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                app:cornerRadius="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colochini"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- PRECIO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₡ 68,000"
                android:textSize="16sp"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComprarColochini"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comprar"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:strokeColor="#000000"
                app:strokeWidth="1dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Botón Menú (abajo) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMenu"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú"
        android:textSize="18sp"
        app:cornerRadius="30dp"
        app:strokeColor="#000000"
        app:strokeWidth="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>